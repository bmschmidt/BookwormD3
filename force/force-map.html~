    <!DOCTYPE html>
    <html>
    <head>
    <title>Force-Directed Map</title>
    <script type="text/javascript" src="../../d3.v2.js"></script>
    <style type="text/css">
    
path {
    fill: #ddd;
    fill-opacity: .8;
    stroke: #fff;
    stroke-width: 1.5px;
}

line {
    stroke: #999;
}

</style>
    </head>
    <body>
    <script type="text/javascript">
    
var width = 960,
height = 500;

var path = d3.geo.path(),
force = d3.layout.force().size([width, height]);

var svg = d3.select("body").append("svg")
    .attr("width", width)
    .attr("height", height);

d3.json("../data/us-states.json", function(states) {
    var nodes = [],
    realcents = new Array(),
    links = [];
    
    states.features.forEach(function(d, i) {
	// A few states are at fake coordinates
	if (d.id == "AK" || d.id == "PR" || d.id == "HI") return;
	
	var centroid = path.centroid(d);
	centroid.x = centroid[0];
	centroid.y = centroid[1];
	centroid.yrand = Math.random() *700
	centroid.xrand = Math.random() *700
	centroid.xorig = centroid[0];
	centroid.yorig = centroid[1];
	//centroid.x = Math.random()*750 *1;
	//centroid.y = Math.random()*750 *1;
	centroid.feature = d;
	nodes.push(centroid);
    });

    d3.geom.delaunay(nodes).forEach(function(d) {
	links.push(edge(d[2],d[1]))
	links.push(edge(d[0],d[1]))
	links.push(edge(d[0],d[2]))
    });
//    var newnodes = [];
//    d3.selectAll(nodes).forEach(function(d) {
//	d.x = d.xrand;
//	d.y = d.yrand;
//	nodes.push(d);
//    } );
//    nodes = newnodes;

    force
	.gravity(0)
	.charge(0)
	.nodes(nodes)
	.links(links)
	.linkDistance(function(d) { return d.distance; })
        .start();
    
    var link = svg.selectAll("line")
	.data(links)
	.enter().append("line")
	.attr("x1", function(d) { return d.source.xrand; })
	.attr("y1", function(d) { return d.source.yrand; })
	.attr("x2", function(d) { return d.target.xrand; })
	.attr("y2", function(d) { return d.target.yrand; });
    
    var node = svg.selectAll("g")
	.data(nodes)
	.enter().append("g")
        .attr("transform", function(d) {
	    return "translate("  + -d.x + "," + -d.y + ")";
	})
    
	.call(force.drag)
	.append("path")
	.attr("transform", function(d) { return "translate(" + d.xrand + "," + d.yrand + ")"; })
	.attr("d", function(d) { return path(d.feature); });
    
    force.on("tick", function(e) {
//	node.attr("transform", function(d) {
//	    return "translate(" + d.x + "," + d.y + ")";
//	});
	
	link.attr("x1", function(d) { return d.source.x; })
            .attr("y1", function(d) { return d.source.y; })
            .attr("x2", function(d) { return d.target.x; })
            .attr("y2", function(d) { return d.target.y; });
    })
    .linkDistance(function(d) {return d.distance})
});

function edge(a, b) {
    var dx = a.x - b.x, dy = a.y - b.y;
    return {
	source: a,
	target: b,
	distance: Math.sqrt(dx * dx + dy * dy)
    };
}

    </script>
  </body>
</html>
